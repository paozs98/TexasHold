<Window x:Class="Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="350.373" Width="304.478" FontSize="14"
        Background="ForestGreen">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20,20,18.6,10.4">
            <Label Content="Login" Foreground="White" FontSize="25"
               HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Usuario" Foreground="White"/>
            <TextBox Name="txtUserName" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Label Content="Contraseña" Foreground="White"/>
            <PasswordBox Name="txtContraseña" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="Autentificarse" Click="autentificarse" Content="Autentificarse" Margin="40,10,39,10" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Name="Registrarse" Click="registrarse" Content="Registrarse" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
