<Window x:Class="texasHoldWPF.Loing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:texasHoldWPF"
        mc:Ignorable="d"
        Title="Loing" Height="450" Width="400"
        Background="DarkSlateBlue"
        WindowStyle="None"
       WindowStartupLocation="CenterScreen"
        Topmost="False" WindowState="Normal"
        AllowsTransparency="True" 
        
        Icon="./Recursos/games_cardgame_pocker_872.ico"
        >
    <Border Background="DimGray" CornerRadius="28" Margin="26">
    <StackPanel Margin="25">
        <Label Content="Texas Holden" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="User" Foreground="White" FontSize="20"/>
            <TextBox Name="usuario" Background="LightSlateGray" Foreground="White" FontSize="20"/>
            <Label Content="Password" Foreground="White" FontSize="20"/>
            <TextBox Name="password" Background="LightSlateGray" Foreground="White" FontSize="20"/>
            <Button Name="submit"  HorizontalAlignment="Center" Margin="30 30" FontSize="20" Background="LightSlateGray" Foreground="White">  Ingresar </Button>


        </StackPanel>
    </Border>
</Window>
